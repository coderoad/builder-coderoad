{
 "compileOnSave": false,
 "buildOnSave": false,
 "compilerOptions": {
  "target": "ES5",
  "module": "commonjs",
  "declaration": false,
  "noImplicitAny": false,
  "removeComments": true,
  "noLib": false,
  "jsx": "react",
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "outDir": "lib",
  "moduleResolution": "node",
  "rootDir": "src"
 },
 "filesGlob": [
  "typings/**/*.d.ts",
  "**/*.ts",
  "**/*.tsx",
  "!**/*.spec.ts",
  "!**/*.spec.tsx"
],
 "exclude": [
  "node_modules"
 ],
 "atom": {
  "rewriteTsconfig": false
 }
}
